<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/personal_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/edit_pfp_heading"
            android:layout_width="117dp"
            android:layout_height="42dp"
            android:layout_marginStart="136dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="158dp"
            android:layout_marginBottom="673dp"
            android:gravity="center"
            android:text="Edit Profile"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="174dp"
            android:layout_height="145dp"
            android:layout_marginStart="113dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="139dp"
            android:layout_marginBottom="515dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pfp" />

        <Button
            android:id="@+id/edit_picture"
            android:layout_width="202dp"
            android:layout_height="59dp"
            android:layout_marginStart="118dp"
            android:layout_marginTop="236dp"
            android:layout_marginEnd="139dp"
            android:layout_marginBottom="438dp"
            android:backgroundTint="@android:color/darker_gray"
            android:onClick="editpicture"
            android:text="Edit Picture"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/username_edit_txt"
            android:layout_width="96dp"
            android:layout_height="23dp"

            android:layout_marginStart="54dp"
            android:layout_marginTop="338dp"
            android:layout_marginEnd="261dp"
            android:layout_marginBottom="370dp"
            android:text="Username"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="237dp"
            android:layout_height="68dp"
            android:layout_marginStart="165dp"
            android:layout_marginTop="322dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="358dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/UsernameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Username..."
                    android:inputType="text"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="350dp"
            android:layout_marginBottom="668dp"
            android:background="@null"
            android:onClick="settingspage"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/left_arrow"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/save_txt"
            android:layout_width="103dp"
            android:layout_height="56dp"
            android:layout_marginStart="281dp"
            android:layout_marginTop="643dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="Save "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/update_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="68dp"
            android:layout_marginTop="428dp"
            android:layout_marginEnd="293dp"
            android:layout_marginBottom="276dp"
            android:text="Email"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/edit_password_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="54dp"
            android:layout_marginTop="514dp"
            android:layout_marginEnd="268dp"
            android:layout_marginBottom="190dp"
            android:text="Password"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_email_txt_input"
            android:layout_width="237dp"
            android:layout_height="68dp"
            android:layout_marginStart="165dp"
            android:layout_marginTop="410dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="266dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Email..."
                    android:inputType="text"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/edit_password_img"
            android:layout_width="27dp"
            android:layout_height="21dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="514dp"
            android:layout_marginEnd="375dp"
            android:layout_marginBottom="196dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_lock_idle_lock" />

        <ImageView
            android:id="@+id/edit_email_img"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="428dp"
            android:layout_marginEnd="377dp"
            android:layout_marginBottom="278dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_dialog_email" />

        <ImageView
            android:id="@+id/edit_username_img"
            android:layout_width="41dp"
            android:layout_height="49dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="331dp"
            android:layout_marginEnd="369dp"
            android:layout_marginBottom="354dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profileicon" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="237dp"
            android:layout_height="68dp"
            android:layout_marginStart="162dp"
            android:layout_marginTop="488dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="175dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:hint="Password..."
                    android:inputType="textPassword"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"/>
        </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>